@inherits LayoutComponentBase
@inject AuthenticationStateProvider AuthStateProvider
@inject NavigationManager Navigation

<div class="min-h-screen bg-gray-950">
    <CascadingAuthenticationState>
        <header class="bg-gray-900 border-b border-gray-800 px-4 py-3 sm:px-6 shadow-lg backdrop-blur-sm bg-gray-900/95 sticky top-0 z-50">
            <div class="max-w-7xl mx-auto flex justify-between items-center">
                <!-- Logo / Brand -->
                <div class="flex items-center gap-3">
                    <div class="w-10 h-10 bg-gradient-to-br from-blue-500 to-purple-600 rounded-lg flex items-center justify-center shadow-lg">
                        <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
                        </svg>
                    </div>
                    <div class="hidden sm:block">
                        <h1 class="text-lg font-bold text-white">Admin Panel</h1>
                        <p class="text-xs text-gray-400">Sistema de Gestión</p>
                    </div>
                </div>

                <!-- User Actions -->
                <AuthorizeView>
                    <Authorized>
                        <div class="flex items-center gap-3">
                            <!-- Logout Button -->
                            <button @onclick="HandleLogout"
                                    class="group relative flex items-center gap-2 px-4 py-2 bg-gray-800 hover:bg-red-600 text-gray-300 hover:text-white rounded-lg border border-gray-700 hover:border-red-500 transition-all duration-300 shadow-md hover:shadow-lg"
                                    title="Cerrar Sesión">
                                <svg class="w-5 h-5 transition-transform group-hover:translate-x-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"></path>
                                </svg>
                                <span class="hidden sm:inline text-sm font-medium">Salir</span>
                            </button>
                        </div>
                    </Authorized>
                    <NotAuthorized>
                        <div class="flex items-center gap-2 px-4 py-2 bg-gray-800 rounded-lg border border-gray-700">
                            <div class="animate-spin rounded-full h-4 w-4 border-b-2 border-blue-500"></div>
                            <span class="text-sm text-gray-400">Cargando...</span>
                        </div>
                    </NotAuthorized>
                </AuthorizeView>
            </div>
        </header>

        <main class="relative">
            @Body
        </main>

        <!-- Footer (opcional) -->
        <footer class="bg-gray-900 border-t border-gray-800 mt-auto">
            <div class="max-w-7xl mx-auto px-4 py-4 sm:px-6">
                <div class="flex flex-col sm:flex-row justify-between items-center gap-3">
                    <p class="text-sm text-gray-400">
                        © 2025 Admin Panel. Todos los derechos reservados.
                    </p>
                    <div class="flex items-center gap-4 text-xs text-gray-500">
                        <span>v1.0.0</span>
                        <span>•</span>
                        <a href="#" class="hover:text-gray-300 transition-colors">Soporte</a>
                        <span>•</span>
                        <a href="#" class="hover:text-gray-300 transition-colors">Documentación</a>
                    </div>
                </div>
            </div>
        </footer>
    </CascadingAuthenticationState>
</div>

@code {
    private async Task HandleLogout()
    {
        await ((CustomAuthStateProvider)AuthStateProvider).LogoutAsync();
        Navigation.NavigateTo("/login");
    }
}