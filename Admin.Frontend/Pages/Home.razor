@page "/"
@attribute [Authorize]

<style>
    @@keyframes fadeIn {
        from {
            opacity: 0;
            transform: translateY(20px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    @@keyframes slideUp {
        from {
            opacity: 0;
            transform: translateY(20px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .animate-fadeIn {
        animation: fadeIn 0.6s ease-out forwards;
    }

    .animate-slideUp-1 {
        animation: slideUp 0.6s ease-out 0.1s forwards;
        opacity: 0;
    }

    .animate-slideUp-2 {
        animation: slideUp 0.6s ease-out 0.2s forwards;
        opacity: 0;
    }

    .animate-slideUp-3 {
        animation: slideUp 0.6s ease-out 0.3s forwards;
        opacity: 0;
    }

    .animate-slideUp-4 {
        animation: slideUp 0.6s ease-out 0.4s forwards;
        opacity: 0;
    }
</style>

<div class="min-h-screen bg-gradient-to-br from-gray-950 via-gray-900 to-gray-950">
    <div class="max-w-6xl mx-auto px-4 py-8 sm:px-6 lg:px-8">
        <!-- Header -->
        <div class="mb-10 animate-fadeIn">
            <h3 class="text-3xl sm:text-4xl lg:text-5xl font-bold text-white mb-3 bg-gradient-to-r from-white via-blue-100 to-purple-100 bg-clip-text text-transparent">
                Dashboard Administrativo
            </h3>
            <p class="text-gray-400 text-base sm:text-lg">Selecciona una sección para administrar tu concesionaria</p>
        </div>

        <!-- Cards Grid -->
        <div class="grid gap-5 mb-8">
            <!-- Gestionar Vehículos -->
            <NavLink href="/vehicles"
                     class="group relative overflow-hidden flex items-center p-6 sm:p-7 bg-gray-900/70 backdrop-blur-sm rounded-2xl shadow-xl hover:shadow-2xl transition-all duration-300 hover:scale-[1.02] border border-gray-800 hover:border-blue-500/50 animate-slideUp-1">
                <!-- Efecto de brillo -->
                <div class="absolute inset-0 bg-gradient-to-r from-blue-500/0 via-blue-500/10 to-blue-500/0 -translate-x-full group-hover:translate-x-full transition-transform duration-700"></div>

                <!-- Icono -->
                <div class="relative flex-shrink-0 mr-5 sm:mr-6">
                    <div class="w-14 h-14 sm:w-16 sm:h-16 bg-gradient-to-br from-blue-500 to-blue-600 rounded-xl flex items-center justify-center transform group-hover:scale-110 group-hover:rotate-3 transition-all duration-300 shadow-lg shadow-blue-500/30">
                        <svg class="w-7 h-7 sm:w-8 sm:h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
                        </svg>
                    </div>
                </div>

                <!-- Contenido -->
                <div class="relative flex-grow min-w-0">
                    <h4 class="text-xl sm:text-2xl font-bold text-white mb-1.5 group-hover:text-blue-400 transition-colors truncate">
                        Gestionar Vehículos
                    </h4>
                    <p class="text-sm sm:text-base text-gray-400 group-hover:text-gray-300 transition-colors">
                        Administra tu inventario de vehículos
                    </p>
                </div>

                <!-- Flecha -->
                <div class="relative flex-shrink-0 ml-4">
                    <div class="w-10 h-10 sm:w-12 sm:h-12 bg-gray-800/50 group-hover:bg-blue-500/20 rounded-lg flex items-center justify-center transition-all duration-300">
                        <svg class="w-5 h-5 sm:w-6 sm:h-6 text-gray-400 group-hover:text-blue-400 group-hover:translate-x-1 transition-all duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                        </svg>
                    </div>
                </div>
            </NavLink>

            <!-- Gestionar Equipamientos -->
            <NavLink href="/features"
                     class="group relative overflow-hidden flex items-center p-6 sm:p-7 bg-gray-900/70 backdrop-blur-sm rounded-2xl shadow-xl hover:shadow-2xl transition-all duration-300 hover:scale-[1.02] border border-gray-800 hover:border-purple-500/50 animate-slideUp-2">
                <!-- Efecto de brillo -->
                <div class="absolute inset-0 bg-gradient-to-r from-purple-500/0 via-purple-500/10 to-purple-500/0 -translate-x-full group-hover:translate-x-full transition-transform duration-700"></div>

                <!-- Icono -->
                <div class="relative flex-shrink-0 mr-5 sm:mr-6">
                    <div class="w-14 h-14 sm:w-16 sm:h-16 bg-gradient-to-br from-purple-500 to-purple-600 rounded-xl flex items-center justify-center transform group-hover:scale-110 group-hover:rotate-3 transition-all duration-300 shadow-lg shadow-purple-500/30">
                        <svg class="w-7 h-7 sm:w-8 sm:h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6V4m0 2a2 2 0 100 4m0-4a2 2 0 110 4m-6 8a2 2 0 100-4m0 4a2 2 0 110-4m0 4v2m0-6V4m6 6v10m6-2a2 2 0 100-4m0 4a2 2 0 110-4m0 4v2m0-6V4"></path>
                        </svg>
                    </div>
                </div>

                <!-- Contenido -->
                <div class="relative flex-grow min-w-0">
                    <h4 class="text-xl sm:text-2xl font-bold text-white mb-1.5 group-hover:text-purple-400 transition-colors truncate">
                        Gestionar Equipamientos
                    </h4>
                    <p class="text-sm sm:text-base text-gray-400 group-hover:text-gray-300 transition-colors">
                        Configura las características disponibles
                    </p>
                </div>

                <!-- Flecha -->
                <div class="relative flex-shrink-0 ml-4">
                    <div class="w-10 h-10 sm:w-12 sm:h-12 bg-gray-800/50 group-hover:bg-purple-500/20 rounded-lg flex items-center justify-center transition-all duration-300">
                        <svg class="w-5 h-5 sm:w-6 sm:h-6 text-gray-400 group-hover:text-purple-400 group-hover:translate-x-1 transition-all duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                        </svg>
                    </div>
                </div>
            </NavLink>
        </div>
    </div>
</div>
