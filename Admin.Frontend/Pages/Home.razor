    @@keyframes fadeIn {
        from {
            opacity: 0;
            transform: translateY(-0.5rem);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    @@keyframes slideUp {
        from {
            opacity: 0;
            transform: translateY(1rem);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }
</style>

