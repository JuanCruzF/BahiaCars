{
    "Logging": { /* ... */ },
    "AllowedHosts": "*",
    "ReverseProxy": {
        "Routes": {
            "filters-route": {
                "ClusterId": "catalog-cluster",
                "Match": { "Path": "/api/filters/{**catch-all}" },
                "CorsPolicy": "AllowBlazorApp"
            },
            "auth-route": {
                "ClusterId": "auth-cluster",
                "Match": { "Path": "/api/auth/{**catch-all}" },
                "CorsPolicy": "AllowBlazorApp"
            },
            "vehicles-route": {
                "ClusterId": "catalog-cluster",
                "Match": { "Path": "/api/vehicles/{**catch-all}" },
                "CorsPolicy": "AllowBlazorApp"
            },
            "features-route": {
                "ClusterId": "catalog-cluster",
                "Match": { "Path": "/api/features/{**catch-all}" },
                "CorsPolicy": "AllowBlazorApp"
            },
            "media-route": {
                "ClusterId": "media-cluster",
                "Match": { "Path": "/api/media/{**catch-all}" },
                "CorsPolicy": "AllowBlazorApp"
            },
            "search-route": {
                "ClusterId": "search-cluster",
                "Match": { "Path": "/api/search/{**catch-all}" },
                "CorsPolicy": "AllowBlazorApp"
            }
        },
        "Clusters": {
            "auth-cluster": {
                "Destinations": {
                    "auth-service": { "Address": "http://auth.service:8080/" }
                }
            },
            "catalog-cluster": {
                "Destinations": {
                    "catalog-api": { "Address": "http://catalog.api:8080/" }
                }
            },
            "media-cluster": {
                "Destinations": {
                    "media-service": { "Address": "http://media.service:8080/" }
                }
            },
            "search-cluster": {
                "Destinations": {
                    "search-service": { "Address": "http://search.service:8080/" }
                }
            }

        }
    }
}

